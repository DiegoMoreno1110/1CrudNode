<h1>Editar Producto </h1>

<form method="POST" action="/productos/{{ producto.id }}?_method=PUT">
    <div>
        <label for="name">Nombre del producto: </label>
        <input type="text" id="name" name="name" value="{{producto.name}}">
    </div>
    <div>
        <label for="description">Descripcion: </label>
        <input type="text" id="description" name="description" value="{{producto.description}}">
    </div>
    <div>
        <label for="price">Precio: </label>
        <input type="text" id="price" name="price" value="{{producto.price}}">
    </div>
    <div>
        <input type="submit" value="Editar ?">
    </div>
</form>